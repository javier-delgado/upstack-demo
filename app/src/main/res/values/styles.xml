<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="buttonStyle">@style/button</item>

        <!--Material dialogs-->
        <item name="md_positive_color">@color/black</item>
        <item name="md_negative_color">@color/grey400</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>


    <style name="button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/grey100</item>
    </style>

</resources>
